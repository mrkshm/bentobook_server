<%= render "shared/header", title: t('privacy_policy.title') %>

<div class="container mx-auto px-4 pb-8 hotwire-native:pt-8">
<% t('privacy_policy.sections').each do |key, section| %>
<div class="mb-8">
  <h2 class="text-2xl font-semibold tracking-tight text-pretty text-surface-900"><%= section[:title] %></h2>
  <p class="mt-6 text-base/7 text-surface-600"><%= simple_format(section[:content]) %></p>
  </div>
<% end %>

<p><%= t('privacy_policy.contact', email: "support@bentobook.app") %></p>

</div>
