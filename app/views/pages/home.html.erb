<div class="container mx-auto px-4 py-6 not-hotwire-native:hidden">
  <div class="flex justify-between items-center">
    <%= link_to "Log In", new_user_session_path, class: "block rounded-md bg-primary-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-xs hover:bg-primary-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600" %>
    <%= render Shell::ThemeToggleComponent.new %>
  </div>
</div>

<!-- Hero Section -->
<div class="bg-surface-100 lg:py-28">
  <div class="container mx-auto px-4">
    <div class="flex justify-center items-center lg:min-h-[25vh]">
      <div class="max-w-3xl text-center py-12">
        <h1 class="text-5xl font-bold text-primary-600"><%= t('.hero.title') %></h1>
        <p class="py-4 text-xl italic text-surface-700"><%= t('.hero.tagline') %></p>
        <p class="py-6 text-lg text-surface-600"><%= t('.hero.intro') %></p>
      </div>
    </div>
  </div>
</div>

<!-- Main Content -->
<div class="container mx-auto px-4 py-16 bg-surface-50">
  <!-- Personal Culinary Archive Section -->
  <div class="prose max-w-3xl mx-auto mb-16">
    <h2 class="text-3xl font-bold mb-6 text-surface-900"><%= t('.culinary_archive.title') %></h2>
    <p class="mb-4 text-surface-700"><%= t('.culinary_archive.story_intro') %></p>
    <p class="mb-4 text-surface-700"><%= t('.culinary_archive.features') %></p>
    <p class="text-surface-700"><%= t('.culinary_archive.mission') %></p>
  </div>

  <!-- Features Grid -->
  <h2 class="text-3xl font-bold text-center mb-12 text-surface-900"><%= t('.features.section_title') %></h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
    <%= render Landing::FeatureCardComponent.new(
      title: t('.features.private_design.title'),
      description: t('.features.private_design.description')
    ) %>

    <%= render Landing::FeatureCardComponent.new(
      title: t('.features.living_history.title'),
      description: t('.features.living_history.description')
    ) %>

    <%= render Landing::FeatureCardComponent.new(
      title: t('.features.quick_capture.title'),
      description: t('.features.quick_capture.description')
    ) %>

    <%= render Landing::FeatureCardComponent.new(
      title: t('.features.organization.title'),
      description: t('.features.organization.description')
    ) %>

    <%= render Landing::FeatureCardComponent.new(
      title: t('.features.sharing.title'),
      description: t('.features.sharing.description')
    ) %>

    <%= render Landing::FeatureCardComponent.new(
      title: t('.features.relationships.title'),
      description: t('.features.relationships.description')
    ) %>
  </div>

  <!-- CTA Section -->
  <div class="bg-surface-50 py-16 sm:py-24 lg:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <h2 class="max-w-2xl text-3xl font-semibold tracking-tight text-balance text-surface-900 sm:text-4xl">
        <%= t('.cta.title') %>
      </h2>
      <%= turbo_frame_tag "subscription_form" do %>
        <%= render "subscription_form" %>
      <% end %>
    </div>
  </div>
</div>