<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="mt-10 text-center text-2xl/9 font-bold tracking-tight text-surface-900">Sign up</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <div class="mb-6 p-4 rounded-md bg-primary-50 text-primary-700">
      <div class="flex gap-3">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current flex-shrink-0 w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="text-sm font-medium">Bentobook is currently in alpha. An invitation is required to sign up.</span>
      </div>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
        data: { turbo: true }, 
        html: { 
          onsubmit: "return validateEmail()",
          class: "space-y-6"
        }) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, class: "block text-sm/6 font-medium text-surface-900" %>
        <div class="mt-2">
          <%= f.email_field :email, 
              autofocus: true, 
              autocomplete: "email",
              required: true,
              class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-surface-900 outline-1 -outline-offset-1 outline-surface-300 placeholder:text-surface-400 focus:outline-2 focus:-outline-offset-2 focus:outline-primary-600 sm:text-sm/6" %>
        </div>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm/6 font-medium text-surface-900" %>
        <div class="mt-2">
          <%= f.password_field :password,
              autocomplete: "new-password",
              required: true,
              class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-surface-900 outline-1 -outline-offset-1 outline-surface-300 placeholder:text-surface-400 focus:outline-2 focus:-outline-offset-2 focus:outline-primary-600 sm:text-sm/6" %>
          <% if @minimum_password_length %>
            <p class="mt-2 text-sm text-surface-500">
              <%= @minimum_password_length %> characters minimum
            </p>
          <% end %>
        </div>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "block text-sm/6 font-medium text-surface-900" %>
        <div class="mt-2">
          <%= f.password_field :password_confirmation,
              autocomplete: "new-password",
              required: true,
              class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-surface-900 outline-1 -outline-offset-1 outline-surface-300 placeholder:text-surface-400 focus:outline-2 focus:-outline-offset-2 focus:outline-primary-600 sm:text-sm/6" %>
        </div>
      </div>

      <div class="text-sm text-surface-500">
        You will receive an email to confirm your account.
      </div>

      <div class="text-sm text-surface-500">
        By signing up, you agree to our <%= link_to "Terms and Conditions", terms_path, class: "font-semibold text-primary-600 hover:text-primary-500" %>.
      </div>

      <div>
        <%= f.submit "Sign up", 
            class: "flex w-full justify-center rounded-md bg-primary-600 px-3 py-1.5 text-sm/6 font-semibold text-white shadow-xs hover:bg-primary-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600" %>
      </div>
    <% end %>

    <p class="mt-10 text-center text-sm/6 text-surface-500">
      Already have an account?
      <%= link_to "Sign in", new_session_path(resource_name), class: "font-semibold text-primary-600 hover:text-primary-500" %>
    </p>
  </div>
</div>

<script>
  function validateEmail() {
    const allowedEmails = ["mrks.heumann@gmail.com", "marc.haussmann@gmail.com", "esyram.kcnarf@gmail.com"];
    const emailInput = document.querySelector('input[name="user[email]"]');
    const emailValue = emailInput.value;

    if (!allowedEmails.includes(emailValue)) {
      alert("You are not authorized to sign up with this email address.");
      return false; // Prevent form submission
    }
    return true; // Allow form submission
  }
</script>
