<div class="max-w-md mx-auto mt-8">
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title">Sign up</h2>

      <div class="alert alert-info shadow-lg mt-4">
        <div>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current flex-shrink-0 w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span class="text-lg font-semibold">Bentobook is currently in alpha. An invitation is required to sign up.</span>
        </div>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
          data: { turbo: true }, html: { onsubmit: "return validateEmail()" }) do |f| %>

        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-control w-full">
          <%= f.label :email, class: "label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "input input-bordered w-full" %>
        </div>

        <div class="form-control w-full">
          <%= f.label :password, class: "label" %>
          <%= f.password_field :password, autocomplete: "new-password",
              class: "input input-bordered w-full" %>
          <% if @minimum_password_length %>
            <label class="label">
              <span class="label-text-alt">
                <%= @minimum_password_length %> characters minimum
              </span>
            </label>
          <% end %>
        </div>

        <div class="form-control w-full">
          <%= f.label :password_confirmation, class: "label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "input input-bordered w-full" %>
        </div>

        <div class="text-sm text-base-content/70 mt-6">
          You will receive an email to confirm your account.
        </div>

        <div class="text-sm text-base-content/70 mt-6">
          By signing up, you agree to our <%= link_to "Terms and Conditions", terms_path, class: "link link-primary" %>.
        </div>

        <div class="card-actions justify-end mt-4">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="divider">OR</div>

      <div class="space-y-2">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

<script>
  function validateEmail() {
    const allowedEmails = ["mrks.heumann@gmail.com", "marc.haussmann@gmail.com", "esyram.kcnarf@gmail.com"];
    const emailInput = document.querySelector('input[name="user[email]"]');
    const emailValue = emailInput.value;

    if (!allowedEmails.includes(emailValue)) {
      alert("You are not authorized to sign up with this email address.");
      return false; // Prevent form submission
    }
    return true; // Allow form submission
  }
</script>
