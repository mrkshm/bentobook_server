<%# app/views/restaurants/_visits_section.html.erb %>
<%#
  Visits Section Partial
  
  Displays a list of visits for a restaurant.
  
  Parameters:
    - visits: Array of Visit objects to display (required)
    - restaurant: The restaurant these visits belong to (required for empty state link)
%>

<% if visits.any? %>
  <div class="rounded-lg bg-surface-100/50 p-2 md:p-6 backdrop-blur-sm">
    <h2 class="text-xl font-semibold text-surface-900 mb-4">Visits</h2>
    <div class="space-y-4">
      <% visits.each do |visit| %>
        <%= render(Visits::CardComponent.new(visit: visit)) %>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="rounded-lg bg-surface-100/50 p-6 backdrop-blur-sm text-center">
    <p class="text-surface-600 mb-4">No visits recorded yet</p>
    <%= link_to "Record your first visit", new_visit_path(restaurant_id: restaurant.id),
        class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
  </div>
<% end %>
