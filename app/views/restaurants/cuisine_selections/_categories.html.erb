<div class="mb-6">
  <h3 class="text-sm font-medium mb-2 text-gray-700">Categories</h3>
  <div class="flex flex-wrap gap-2">
    <% categories.each do |category| %>
    <% 
        base_classes = "px-3 py-1.5 rounded-full text-sm"
        
        if category.name == 'asian'
          default_classes = "bg-category-asian-light text-category-asian-dark hover:bg-category-asian-hover"
          selected_classes = "bg-category-asian-light text-category-asian-dark ring-2 ring-category-asian"
        else
          default_classes = "bg-gray-100 hover:bg-gray-200"
          selected_classes = "bg-blue-100 text-blue-800"
        end
      %>
      <%= link_to t("cuisine_categories.#{category.name}"),
                edit_restaurant_cuisine_selection_path(restaurant, category_id: category.id),
                class: "#{base_classes} #{category == selected ? selected_classes : default_classes}" %>
    <% end %>
  </div>
</div>