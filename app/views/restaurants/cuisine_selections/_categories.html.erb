<div class="mb-6">
  <h3 class="text-sm font-medium mb-2 text-gray-700">Categories</h3>
  <div class="flex flex-wrap gap-2">
    <% categories.each do |category| %>
      <%= link_to category.name,
                edit_restaurant_cuisine_selection_path(restaurant, category_id: category.id),
                class: "px-3 py-1.5 rounded-full text-sm #{category == selected ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 hover:bg-gray-200'}" %>
    <% end %>
  </div>
</div>