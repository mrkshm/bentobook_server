<%= render partial: "shared/header", locals: { title: t("restaurants.price_level.edit") } %>

<div class="bg-surface-50 p-4">
  <%= form_with model: @restaurant, 
                url: restaurant_price_level_path(restaurant_id: @restaurant.id, locale: current_locale),
                method: :patch,
                class: "bg-white rounded-lg shadow p-4" do |f| %>
    <div class="flex justify-center space-x-2">
      <% 4.times do |i| %>
        <%= f.button type: "submit",
                    name: "restaurant[price_level]",
                    value: i + 1,
                    class: "text-3xl focus:outline-none" do %>
          <span class="<%= i < @restaurant.price_level.to_i ? 'text-primary-500' : 'text-surface-300' %>">
            $
          </span>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
