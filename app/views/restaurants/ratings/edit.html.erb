<%= turbo_frame_tag "modal" do %>
  <div class="fixed inset-0 bg-surface-900/75 flex items-center justify-center z-50">
    <div class="bg-white p-6 rounded-lg shadow-xl max-w-sm w-full mx-4">
      <div class="flex justify-between items-start mb-4">
        <h3 class="text-lg font-medium"><%= t("restaurants.rating.edit") %></h3>
        <%= link_to restaurant_path(id: @restaurant.id, locale: nil),
                    class: "text-surface-400 hover:text-surface-500",
                    data: { turbo_frame: "_top" } do %>
          <span class="sr-only">Close</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        <% end %>
      </div>

      <div class="flex justify-center space-x-2">
        <% 5.times do |i| %>
          <%= button_to restaurant_rating_path(restaurant_id: @restaurant.id, locale: nil),
                        method: :patch,
                        params: { restaurant: { rating: i + 1 } },
                        class: "text-2xl focus:outline-none" do %>
            <span class="<%= i < @restaurant.rating.to_i ? 'text-primary-500' : 'text-surface-300' %>">
              <%= i < @restaurant.rating.to_i ? '★' : '☆' %>
            </span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>