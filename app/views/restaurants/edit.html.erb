<%= form_with(model: @restaurant,
              local: true,
              url: restaurant_path(id: @restaurant.id),
              class: "space-y-6") do |form| %>



  <div>
    <% frame_id = dom_id(@restaurant, "name_turbo_frame") %>
    <%= form.label :name, class: "block text-sm font-medium text-surface-900" %>
    <%= turbo_frame_tag frame_id do %>
      <%= form.text_field :name, value: @restaurant.name,
                          class: "mt-1 block w-full rounded-md bg-white px-3 py-2 text-surface-900 shadow-sm ring-1 ring-inset ring-surface-300 placeholder:text-surface-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 text-xl font-bold" %>
      <%= form.button t('restaurants.save_name'), class: 'btn btn-outline mt-2 inline-action' %>
      <%= button_to t("common.cancel"), @restaurant, class: 'inline-action btn btn-outline mt-2' %>
    <% end %>
  </div>

  <!-- Address Fields -->
  <% frame_id = dom_id(@restaurant, "address_turbo_frame") %>
  <%= turbo_frame_tag frame_id, class: "contents" do %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= form.label :street_number, class: "block text-sm font-medium text-surface-900" %>
        <%= form.text_field :street_number, value: @restaurant.street_number,
                            class: "mt-1 block w-full rounded-md bg-white px-3 py-2 text-surface-900 shadow-sm ring-1 ring-inset ring-surface-300 placeholder:text-surface-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm" %>
      </div>

      <div>
        <%= form.label :street, class: "block text-sm font-medium text-surface-900" %>
        <%= form.text_field :street, value: @restaurant.street,
                            class: "mt-1 block w-full rounded-md bg-white px-3 py-2 text-surface-900 shadow-sm ring-1 ring-inset ring-surface-300 placeholder:text-surface-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm" %>
      </div>

      <div>
        <%= form.label :postal_code, class: "block text-sm font-medium text-surface-900" %>
        <%= form.text_field :postal_code, value: @restaurant.postal_code,
                            class: "mt-1 block w-full rounded-md bg-white px-3 py-2 text-surface-900 shadow-sm ring-1 ring-inset ring-surface-300 placeholder:text-surface-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm" %>
      </div>

      <div>
        <%= form.label :city, class: "block text-sm font-medium text-surface-900" %>
        <%= form.text_field :city, value: @restaurant.city,
                            class: "mt-1 block w-full rounded-md bg-white px-3 py-2 text-surface-900 shadow-sm ring-1 ring-inset ring-surface-300 placeholder:text-surface-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm" %>
      </div>

      <div>
        <%= form.label :state, class: "block text-sm font-medium text-surface-900" %>
        <%= form.text_field :state, value: @restaurant.state,
                            class: "mt-1 block w-full rounded-md bg-white px-3 py-2 text-surface-900 shadow-sm ring-1 ring-inset ring-surface-300 placeholder:text-surface-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm" %>
      </div>

      <div>
        <%= form.label :country, class: "block text-sm font-medium text-surface-900" %>
        <%= form.text_field :country, value: @restaurant.country,
                            class: "mt-1 block w-full rounded-md bg-white px-3 py-2 text-surface-900 shadow-sm ring-1 ring-inset ring-surface-300 placeholder:text-surface-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm" %>
      </div>

      <div>
        <%= form.label :phone_number, class: "block text-sm font-medium text-surface-900" %>
        <%= form.text_field :phone_number, value: @restaurant.phone_number,
                            class: "mt-1 block w-full rounded-md bg-white px-3 py-2 text-surface-900 shadow-sm ring-1 ring-inset ring-surface-300 placeholder:text-surface-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm" %>
      </div>

      <div>
        <%= form.label :url, class: "block text-sm font-medium text-surface-900" %>
        <%= form.text_field :url, value: @restaurant.url,
                            class: "mt-1 block w-full rounded-md bg-white px-3 py-2 text-surface-900 shadow-sm ring-1 ring-inset ring-surface-300 placeholder:text-surface-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm" %>
      </div>
      <%= form.button t("restaurants.save_address"), class: 'btn inline-action' %>
      <%= link_to t("common.cancel"), @restaurant, class: 'inline-action btn p-2' %>
  <% end %>

  </div>
  <div>

  </div>
  <% form.submit t("common.save"),
                 class: "rounded-md bg-primary-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-primary-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600" %>

<% end %>
