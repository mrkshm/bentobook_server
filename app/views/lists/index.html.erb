<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold"><%= t('.title') %></h1>
    <%= link_to t('.new_list'), new_list_path, class: "btn btn-primary" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @lists.each do |list| %>
      <div class="card bg-base-100 shadow-xl" id="<%= dom_id(list) %>">
        <div class="card-body">
          <h2 class="card-title">
            <%= list.name %>
            <span class="badge badge-<%= list.visibility %> badge-lg">
              <%= t(".#{list.visibility}") %>
            </span>
          </h2>
          
          <p class="text-base-content/70">
            <%= truncate(list.description, length: 100) %>
          </p>
          
          <div class="card-actions justify-end">
            <%= link_to t('common.view'), list_path(id: list.id), class: "btn btn-sm" %>
            <%= link_to t('common.edit'), edit_list_path(id: list.id), class: "btn btn-sm btn-outline" %>
            <%= button_to t('common.delete'), list_path(id: list.id), 
                method: :delete, 
                class: "btn btn-sm btn-error",
                data: { turbo_confirm: t('common.confirm_delete') } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
