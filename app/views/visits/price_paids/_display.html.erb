<%# locals: (visit:) -%>
<%= turbo_frame_tag dom_id(visit, :price_paid) do %>
  <% if visit.price_paid.present? %>
    <%= link_to edit_visit_price_paid_path(visit_id: visit.id),
        class: "inline-flex items-center text-surface-700 hover:text-primary-600",
        data: { turbo_frame: "modal" } do %>
      <span class="font-semibold text-surface-900 mr-2">Price Paid:</span>
      <%= visit.price_paid.format %>
    <% end %>
  <% else %>
    <%= link_to edit_visit_price_paid_path(visit_id: visit.id),
        class: "inline-flex items-center text-surface-700 hover:text-primary-600",
        data: { turbo_frame: "modal" } do %>
      <span class="text-surface-500"><%= t("visits.price_paid.add") %></span>
    <% end %>
  <% end %>
<% end %>
