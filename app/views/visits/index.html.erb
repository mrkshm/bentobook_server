<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6"><%= t("visits.index.title") %></h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @visits.each do |visit| %>
      <%= render(VisitCardComponent.new(visit: visit)) %>
    <% end %>
  </div>

  <div class="flex flex-col items-center space-y-4 mt-8">
    <%== pagy_daisy_ui_nav(@pagy) %>
    <div class="badge badge-lg badge-ghost">
      <%== pagy_info(@pagy) %>
    </div>
  </div>

  <%= link_to new_visit_path, class: "btn btn-primary btn-circle fixed bottom-4 right-4" do %>
    <%= heroicon "plus", options: { class: "w-6 h-6" } %>
  <% end %>
</div>
