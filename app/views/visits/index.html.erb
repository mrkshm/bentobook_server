<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6"><%= t("visits.index.title") %></h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @visits.each do |visit| %>
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title"><%= visit.title %></h2>
          <p class="text-sm text-gray-500"><%= visit.date.strftime("%B %d, %Y") %></p>
          
          <% if visit.contacts.any? %>
            <div class="flex flex-wrap gap-2 mt-2">
              <% visit.contacts.each do |contact| %>
                <%= render(AvatarComponent.new(user: contact, size: :small)) %>
              <% end %>
            </div>
          <% end %>

          <div class="mt-2">
            <%= render(RatingsComponent.new(rating: visit.rating, readonly: true)) %>
          </div>

          <div class="card-actions justify-end mt-4">
            <%= link_to visit_path(visit), class: "btn btn-primary btn-sm" do %>
              <%= heroicon "eye", options: { class: "w-4 h-4 mr-1" } %>
              View
            <% end %>
            <%= link_to edit_visit_path(visit), class: "btn btn-ghost btn-sm" do %>
              <%= heroicon "pencil", options: { class: "w-4 h-4 mr-1" } %>
              Edit
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="flex flex-col items-center space-y-4 mt-8">
    <%== pagy_daisy_ui_nav(@pagy) %>
    <div class="text-sm text-gray-600 bg-base-200 p-2 rounded-lg">
      <%== pagy_info(@pagy) %>
    </div>
  </div>

  <%= link_to new_visit_path, class: "btn btn-primary fixed bottom-4 right-4" do %>
    <%= heroicon "plus", options: { class: "w-5 h-5 mr-1" } %>
    New Visit
  <% end %>
</div>
