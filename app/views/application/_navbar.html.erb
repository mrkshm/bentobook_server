<nav class="border-b border-surface-200 bg-surface-50 w-full">
  <%# Helper lambda to treat a path as active if the current path equals it or starts with it %>
  <% active = ->(prefix) { request.path == prefix || request.path.start_with?("#{prefix}/") } %>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 justify-between">
      <div class="flex">
        <div class="flex shrink-0 items-center">
          <img src="https://tailwindcss.com/plus-assets/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company" class="h-8 w-auto dark:hidden" />
          <img src="https://tailwindcss.com/plus-assets/img/logos/mark.svg?color=indigo&shade=500" alt="Your Company" class="h-8 w-auto not-dark:hidden" />
        </div>
        <div class="hidden sm:-my-px sm:ml-6 sm:flex sm:space-x-8">
          <!-- Current: "border-indigo-600 dark:border-indigo-500 text-gray-900 dark:text-white", Default: "border-transparent text-gray-500 dark:text-gray-400 hover:border-gray-300 dark:hover:border-white/20 hover:text-gray-700 dark:hover:text-gray-200" -->
          <% restaurants_active = active.call(restaurants_path) %>
          <%= link_to t('common.nav.restaurants'), restaurants_path,
                class: [
                  "inline-flex items-center border-b-2 px-1 pt-1 text-sm font-medium",
                  (restaurants_active ? "border-indigo-600 dark:border-indigo-500 text-surface-900 dark:text-white"
                                      : "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 dark:text-gray-400 dark:hover:border-white/20 dark:hover:text-gray-200")
                ].join(" "),
                "aria-current": (restaurants_active ? "page" : nil) %>

          <% visits_active = active.call(visits_path) %>
          <%= link_to t("common.nav.visits"), visits_path,
                class: [
                  "inline-flex items-center border-b-2 px-1 pt-1 text-sm font-medium",
                  (visits_active ? "border-indigo-600 dark:border-indigo-500 text-surface-900 dark:text-white"
                                 : "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 dark:text-gray-400 dark:hover:border-white/20 dark:hover:text-gray-200")
                ].join(" "),
                "aria-current": (visits_active ? "page" : nil) %>

          <% contacts_active = active.call(contacts_path) %>
          <%= link_to t("common.nav.contacts"), contacts_path,
                class: [
                  "inline-flex items-center border-b-2 px-1 pt-1 text-sm font-medium",
                  (contacts_active ? "border-indigo-600 dark:border-indigo-500 text-surface-900 dark:text-white"
                                   : "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 dark:text-gray-400 dark:hover:border-white/20 dark:hover:text-gray-200")
                ].join(" "),
                "aria-current": (contacts_active ? "page" : nil) %>

          <% settings_active = active.call(profile_path) %>
          <%= link_to t("common.nav.settings"), profile_path,
                class: [
                  "inline-flex items-center border-b-2 px-1 pt-1 text-sm font-medium",
                  (settings_active ? "border-indigo-600 dark:border-indigo-500 text-surface-900 dark:text-white"
                                   : "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 dark:text-gray-400 dark:hover:border-white/20 dark:hover:text-gray-200")
                ].join(" "),
                "aria-current": (settings_active ? "page" : nil) %>
        </div>
      </div>
    <div class="hidden sm:ml-6 sm:flex sm:items-center">
      <button type="button" class="relative rounded-full p-1 text-gray-400 hover:text-gray-500 focus:outline-2 focus:outline-offset-2 focus:outline-indigo-600 dark:text-gray-400 dark:hover:text-white dark:focus:outline-indigo-500">
        <span class="absolute -inset-1.5"></span>
        <span class="sr-only"><%= t('common.nav.view_notifications') %></span>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" data-slot="icon" aria-hidden="true" class="size-6">
          <path d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
      </button>

      <!-- Profile dropdown -->
      <el-dropdown class="relative ml-3">
        <button class="relative flex max-w-xs items-center rounded-full focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 dark:focus-visible:outline-indigo-500">
          <span class="absolute -inset-1.5"></span>
          <span class="sr-only"><%= t('common.nav.view_user_menu') %></span>
          <img src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="" class="size-8 rounded-full outline -outline-offset-1 outline-black/5 dark:outline-white/10" />
        </button>

        <el-menu anchor="bottom end" popover class="w-48 origin-top-right rounded-md bg-white py-1 shadow-lg outline outline-black/5 transition transition-discrete [--anchor-gap:--spacing(2)] data-closed:scale-95 data-closed:transform data-closed:opacity-0 data-enter:duration-200 data-enter:ease-out data-leave:duration-75 data-leave:ease-in dark:bg-gray-800 dark:shadow-none dark:-outline-offset-1 dark:outline-white/10">
          <%= link_to t("common.nav.settings"), profile_path, class: "block px-4 py-2 text-sm text-gray-700 focus:bg-gray-100 focus:outline-hidden dark:text-gray-300 dark:focus:bg-white/5" %>
          <%= link_to t("common.nav.logout"), destroy_user_session_path, data: { turbo_method: :delete }, class: "block px-4 py-2 text-sm text-gray-700 focus:bg-gray-100 focus:outline-hidden dark:text-gray-300 dark:focus:bg-white/5" %>
        </el-menu>
      </el-dropdown>
    </div>
    <div class="-mr-2 flex items-center sm:hidden">
      <!-- Mobile menu button -->
      <button type="button" command="--toggle" commandfor="mobile-menu" class="relative inline-flex items-center justify-center rounded-md bg-surface-50 p-2 text-surface-500 hover:bg-surface-200 hover:text-surface-500 focus:outline-2 focus:outline-offset-2 focus:outline-indigo-600">
        <span class="absolute -inset-0.5"></span>
        <span class="sr-only">Open main menu</span>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" data-slot="icon" aria-hidden="true" class="size-6 in-aria-expanded:hidden">
          <path d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" data-slot="icon" aria-hidden="true" class="size-6 not-in-aria-expanded:hidden">
          <path d="M6 18 18 6M6 6l12 12" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
      </button>
    </div>
    </div>

    <el-disclosure id="mobile-menu" hidden class="block sm:hidden">
      <div class="space-y-1 pt-2 pb-3">
        <!-- Current: "border-indigo-600 dark:border-indigo-500 bg-indigo-50 dark:bg-indigo-600/10 text-indigo-700 dark:text-indigo-300", Default: "border-transparent text-gray-600 dark:text-gray-400 hover:border-gray-300 dark:hover:border-gray-500 hover:bg-gray-50 dark:hover:bg-white/5 hover:text-gray-800 dark:hover:text-gray-200" -->
        <% m_restaurants_active = active.call(restaurants_path) %>
        <%= link_to t("common.nav.restaurants"), restaurants_path,
              class: [
                "block border-l-4 py-2 pr-4 pl-3 text-base font-medium",
                (m_restaurants_active ? "border-indigo-600 dark:border-indigo-500 bg-indigo-50 dark:bg-indigo-600/10 text-indigo-700 dark:text-indigo-300"
                                      : "border-transparent text-gray-600 dark:text-gray-400 hover:border-gray-300 dark:hover:border-gray-500 hover:bg-gray-50 dark:hover:bg-white/5 hover:text-gray-800 dark:hover:text-gray-200")
              ].join(" "),
              "aria-current": (m_restaurants_active ? "page" : nil) %>

        <% m_visits_active = active.call(visits_path) %>
        <%= link_to t("common.nav.visits"), visits_path,
              class: [
                "block border-l-4 py-2 pr-4 pl-3 text-base font-medium",
                (m_visits_active ? "border-indigo-600 dark:border-indigo-500 bg-indigo-50 dark:bg-indigo-600/10 text-indigo-700 dark:text-indigo-300"
                                 : "border-transparent text-gray-600 dark:text-gray-400 hover:border-gray-300 dark:hover:border-gray-500 hover:bg-gray-50 dark:hover:bg-white/5 hover:text-gray-800 dark:hover:text-gray-200")
              ].join(" "),
              "aria-current": (m_visits_active ? "page" : nil) %>

        <% m_contacts_active = active.call(contacts_path) %>
        <%= link_to t("common.nav.contacts"), contacts_path,
              class: [
                "block border-l-4 py-2 pr-4 pl-3 text-base font-medium",
                (m_contacts_active ? "border-indigo-600 dark:border-indigo-500 bg-indigo-50 dark:bg-indigo-600/10 text-indigo-700 dark:text-indigo-300"
                                   : "border-transparent text-gray-600 dark:text-gray-400 hover:border-gray-300 dark:hover:border-gray-500 hover:bg-gray-50 dark:hover:bg-white/5 hover:text-gray-800 dark:hover:text-gray-200")
              ].join(" "),
              "aria-current": (m_contacts_active ? "page" : nil) %>

        <% m_settings_active = active.call(profile_path) %>
        <%= link_to t("common.nav.settings"), profile_path,
              class: [
                "block border-l-4 py-2 pr-4 pl-3 text-base font-medium",
                (m_settings_active ? "border-indigo-600 dark:border-indigo-500 bg-indigo-50 dark:bg-indigo-600/10 text-indigo-700 dark:text-indigo-300"
                                   : "border-transparent text-gray-600 dark:text-gray-400 hover:border-gray-300 dark:hover:border-gray-500 hover:bg-gray-50 dark:hover:bg-white/5 hover:text-gray-800 dark:hover:text-gray-200")
              ].join(" "),
              "aria-current": (m_settings_active ? "page" : nil) %>
      </div>
    </el-disclosure>
  </nav>