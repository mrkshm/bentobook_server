<%= turbo_frame_tag dom_id(restaurant, :rating) do %>
  <div class="flex items-center space-x-1" data-testid="rating-component">
    <% rating_stars.each do |star| %>
      <% if helpers.hotwire_native_app? %>
        <%= link_to edit_path, class: "text-xl" do %>
          <span class="<%= star[:filled] ? 'text-primary-500' : 'text-surface-300' %>">
            <%= star[:filled] ? '★' : '☆' %>
          </span>
        <% end %>
      <% else %>
        <%= link_to edit_path, 
                    data: { turbo_frame: "modal" },
                    class: "text-xl focus:outline-none" do %>
          <span class="<%= star[:filled] ? 'text-primary-500' : 'text-surface-300' %>">
            <%= star[:filled] ? '★' : '☆' %>
          </span>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>