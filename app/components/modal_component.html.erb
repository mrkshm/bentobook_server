<div id="<%= id %>" 
     class="absolute top-0 left-0 right-0 bottom-0 z-[9999] hidden"
     style="position: fixed !important; min-height: 100vh; min-width: 100vw;"
     data-controller="modal"
     data-action="keyup@window->modal#closeWithKeyboard click->modal#handleClick"
     data-modal-target="container">
  <!-- Backdrop -->
  <div class="absolute inset-0 bg-black/30 backdrop-blur-sm opacity-0 transition-opacity duration-300 ease-out"
       style="position: fixed !important;"
       data-modal-target="overlay"></div>
  
  <!-- Modal panel -->
  <div class="absolute inset-0 overflow-y-auto"
       style="position: fixed !important;">
    <div class="min-h-full flex items-center justify-center p-4">
      <div class="relative transform overflow-hidden rounded-lg bg-white px-4 pb-4 pt-5 text-left shadow-xl transition-all duration-300 ease-out opacity-0 scale-95 sm:my-8 w-full sm:max-w-lg sm:p-6 <%= classes %>"
           data-modal-target="content"
           data-modal-ignore-click="true">
        <% if header %>
          <div class="mb-4">
            <%= header %>
          </div>
        <% end %>
        
        <div>
          <%= body %>
        </div>

        <% if footer %>
          <div class="mt-4">
            <%= footer %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
