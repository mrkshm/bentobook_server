<% if interactive %>
  <%= button_to visit_contacts_path(visit_id: visit.id, contact_id: contact.id, locale: current_locale),
      class: "w-full text-left" do %>
    <div class="flex items-center gap-4 p-4 rounded-lg bg-surface-50 hover:bg-surface-100 transition-colors duration-200 group">
      <%= render(AvatarComponent.new(
        contact: contact,
        text: contact.name,
        size: :md
      )) %>
      
      <div class="flex-grow">
        <p class="font-medium text-surface-900 group-hover:text-primary-600">
          <%= contact.name %>
        </p>
        <% if contact.visits_count > 0 %>
          <p class="text-sm text-surface-500">
            <%= t("contacts.visits.other", count: contact.visits_count) %>
          </p>
        <% end %>
      </div>

      <% if interactive %>
        <%= heroicon "plus-circle", 
            options: { class: "w-5 h-5 text-surface-400 group-hover:text-primary-600" } %>
      <% end %>
    </div>
  <% end %>
<% else %>
  <div class="w-full">
    <div class="flex items-center gap-4 p-4 rounded-lg bg-surface-50 hover:bg-surface-100 transition-colors duration-200 group">
      <%= render(AvatarComponent.new(
        contact: contact,
        text: contact.name,
        size: :md
      )) %>
      
      <div class="flex-grow">
        <p class="font-medium text-surface-900 group-hover:text-primary-600">
          <%= contact.name %>
        </p>
        <% if contact.visits_count > 0 %>
          <p class="text-sm text-surface-500">
            <%= t("contacts.visits.other", count: contact.visits_count) %>
          </p>
        <% end %>
      </div>

      <% if interactive %>
        <%= heroicon "plus-circle", 
            options: { class: "w-5 h-5 text-surface-400 group-hover:text-primary-600" } %>
      <% end %>
    </div>
  </div>
<% end %>