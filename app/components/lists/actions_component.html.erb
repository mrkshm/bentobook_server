<div class="card-actions justify-end mt-4">
  <% if permissions[:can_share] %>
    <%= link_to share_list_path(id: list.id), 
        class: "btn btn-secondary btn-sm",
        data: { turbo_frame: "modal" } do %>
      <%= heroicon "share", options: { class: "w-4 h-4 mr-2" } %>
      <%= t('.share') %>
    <% end %>
  <% end %>

  <% if permissions[:can_export] %>
    <div class="dropdown dropdown-end">
      <label tabindex="0" class="btn btn-outline btn-sm">
        <%= heroicon "arrow-down-tray", options: { class: "w-4 h-4 mr-2" } %>
        <%= t('.export') %>
      </label>
      <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
        <li>
          <%= link_to export_list_path(id: list.id, format: :text),
              data: { 
                turbo: false,
                controller: "flash",
                action: "click->flash#showMessage",
                message: t('.markdown_exported')
              } do %>
            <%= heroicon "document", options: { class: "w-4 h-4 mr-2" } %>
            <%= t('.export_markdown') %>
          <% end %>
        </li>
        <li>
          <%= link_to export_list_path(id: list.id), data: { turbo_frame: "modal" } do %>
            <%= heroicon "envelope", options: { class: "w-4 h-4 mr-2" } %>
            <%= t('.export_email') %>
          <% end %>
        </li>
      </ul>
    </div>
  <% end %>

  <% if permissions[:can_edit] %>
    <%= link_to t('common.edit'), edit_list_path(id: list.id), class: "btn btn-primary btn-sm" %>
  <% end %>

  <%= link_to t('common.back'), lists_path, class: "btn btn-ghost btn-sm" %>
</div>
