<%= form_tag @url, method: :get, data: {turbo_action: "replace"}, class: 'w-full md:w-1/2', id: 'search-form' do %>
  <div class="flex flex-col md:flex-row items-end gap-2">
    <div class="w-full">
      <label for="search-input" class="block mb-2">
        <span class="label-text text-sm font-medium text-surface-900"><%= t('search') %>:</span>
      </label>
      <div class="flex gap-2 mt-2">
        <input type="text" 
               id="search-input" 
               name="search" 
               value="<%= @search_value %>" 
               class="input input-bordered w-full" 
               placeholder="<%= @placeholder %>">
        
        <% @additional_fields.each do |name, value| %>
          <%= hidden_field_tag name, value %>
        <% end %>
        
        <%= button_tag type: "submit", class: "btn btn-primary" do %>
          <%= t("search") %>
        <% end %>

        <button type="button" 
                class="btn btn-ghost"
                onclick="window.location='<%= @url %>'">
          <%= t("reset") %>
        </button>
      </div>
    </div>
  </div>
<% end %>
