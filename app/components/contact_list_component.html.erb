<div class="space-y-2">
  <% if contacts.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <% contacts.each do |contact| %>
        <%= render(ContactSelectableCardComponent.new(
          contact: contact,
          visit: visit
        )) %>
      <% end %>
    </div>
  <% else %>
    <p class="text-surface-600 text-center py-4"><%= t("contacts.no_results") %></p>
  <% end %>
</div>