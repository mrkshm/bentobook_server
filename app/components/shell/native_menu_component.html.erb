<div class="grid grid-cols-2 gap-4 p-4">
  <% menu_items.each do |item| %>
    <%= link_to item[:path], class: "flex flex-col items-center justify-center p-6 bg-surface-50 rounded-xl shadow-sm hover:bg-surface-100 transition-colors" do %>
      <div class="w-12 h-12 flex items-center justify-center bg-blue-100 text-blue-600 rounded-lg mb-3">
        <span class="material-symbols-outlined"><%= item[:icon] %></span>
      </div>
      <span class="text-lg font-medium text-surface-900"><%= item[:title] %></span>
      <% if item[:notification].present? %>
        <div class="mt-2">
          <%= item[:notification] %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
